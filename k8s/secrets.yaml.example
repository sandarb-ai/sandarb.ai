# Sandarb Data Platform Secrets
# Copy this file to secrets.yaml and fill in real values before applying.
# NEVER commit secrets.yaml to version control.
#
# Generate secrets:
#   openssl rand -hex 32     (for superset-secret-key)
#   openssl rand -base64 24  (for passwords)
#
# Apply: kubectl apply -f k8s/secrets.yaml
apiVersion: v1
kind: Secret
metadata:
  name: sandarb-data-secrets
  namespace: sandarb-data
  labels:
    app.kubernetes.io/part-of: sandarb
type: Opaque
stringData:
  clickhouse-password: "<strong-password>"
  superset-secret-key: "<openssl-rand-hex-32>"
  superset-admin-password: "<strong-password>"
---
# PostgreSQL credentials for CNPG cluster (used by sandarb-postgres Cluster CRD)
apiVersion: v1
kind: Secret
metadata:
  name: sandarb-postgres-credentials
  namespace: sandarb-data
  labels:
    app.kubernetes.io/part-of: sandarb
type: kubernetes.io/basic-auth
stringData:
  username: sandarb
  password: "<strong-password>"
